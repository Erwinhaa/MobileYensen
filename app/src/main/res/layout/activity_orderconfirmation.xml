<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e3f5ff"
    tools:context="com.example.user.login.orderconfirmation"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/lay00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/shape"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Pilih Mobil yang akan digunakan:"
            android:textSize="15dp"
            android:padding="2dp"/>

        <Spinner
            android:id="@+id/spinnermbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overlapAnchor="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infogdg"
        android:layout_below="@+id/lay00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/shape">

        <ImageView
            android:id="@+id/img_sampul"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nmgdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Gedung"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="Alamat" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay01"
        android:layout_below="@+id/infogdg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:clickable="true"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/inflantai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:hint="Lantai"
            android:padding="5dp"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="slot"/>

        <TextView
            android:id="@+id/infslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="slot"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="42dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/lay01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Anda memiliki waktu 30 menit untuk menuju lokasi yang telah dipilih"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/buttpesan"
             />
        <Button
            android:id="@+id/buttpesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3383C1"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="PESAN" />
    </RelativeLayout>

</RelativeLayout>