<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="#e3f5ff"
    tools:context="com.example.user.login.ordercon">
<RelativeLayout
    android:id="@+id/lay00"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape">
    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="waktu anda tinggal..."
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/timer"
        android:layout_below="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Start"
        android:visibility="gone" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay00"
        android:background="@drawable/shape"
        android:padding="5dp">
        <TextView
            android:id="@+id/namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="nama user"
            android:layout_margin="5dp"
            android:textSize="16dp"/>
        <View
            android:layout_below="@+id/namauser"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <TextView
            android:id="@+id/nmgdg"
            android:layout_below="@+id/namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="namagdg"
            android:layout_margin="5dp"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/alamat"
            android:layout_below="@+id/nmgdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="alamatgdg"
            android:layout_margin="5dp"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/lay01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tesee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembatalan pesanan akan dikenakan biaya sebesar Rp.3.000"
            android:layout_above="@+id/buttonstop"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttonstop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="batalkan pesanan" />
    </RelativeLayout>

</RelativeLayout>